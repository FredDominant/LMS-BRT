    <android.support.design.widget.TextInputLayout
      android:id="@+id/cardNumber"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:hint="Card Number"
      android:textColorHint="@color/colorPrimary"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0">

      <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="number"
        android:textColor="@color/colorPrimary"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
      android:id="@+id/cardMonth"
      android:layout_width="65dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:layout_marginBottom="8dp"
      android:hint="Month"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/cardNumber"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/cardNumber"
      app:layout_constraintTop_toBottomOf="@+id/cardNumber"
      app:layout_constraintVertical_bias="0.0">

      <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:inputType="number"
        android:layout_height="wrap_content"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
      android:id="@+id/cardYear"
      android:layout_width="65dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="8dp"
      android:hint="Year"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/cardNumber"
      app:layout_constraintHorizontal_bias="0.2"
      app:layout_constraintStart_toEndOf="@+id/cardMonth"
      app:layout_constraintTop_toBottomOf="@+id/cardNumber"
      app:layout_constraintVertical_bias="0.0">

      <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:inputType="number"
        android:layout_height="match_parent"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
      android:id="@+id/cardCVV"
      android:layout_width="65dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:layout_marginBottom="8dp"
      android:hint="CVV"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/cardNumber"
      app:layout_constraintHorizontal_bias="0.97"
      app:layout_constraintStart_toEndOf="@+id/cardYear"
      app:layout_constraintTop_toBottomOf="@+id/cardNumber"
      app:layout_constraintVertical_bias="0.0">

      <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:inputType="number"
        android:layout_height="match_parent"/>

    </android.support.design.widget.TextInputLayout>

    <Button
      android:id="@+id/paymentButton"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:backgroundTint="@color/colorPrimary"
      android:textColor="#FFF"
      android:text="Confirm Payment"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/cardNumber"
      app:layout_constraintStart_toStartOf="@+id/cardNumber"
      app:layout_constraintTop_toBottomOf="@+id/cardYear"/>


  </android.support.constraint.ConstraintLayout>

  <android.support.constraint.ConstraintLayout
    android:visibility="gone"
    android:id="@+id/paymentResult"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
      android:id="@+id/errorContainer"
      android:visibility="gone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="4dp"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">
      <ImageView
        android:id="@+id/errorImage"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_error"/>
      <TextView
        android:id="@+id/paymentErrorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unable to complete payment."
        android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    <LinearLayout
      android:id="@+id/successContainer"
      android:visibility="gone"
      android:layout_width="wrap_content"
      android:layout_height="71dp"
      android:layout_margin="4dp"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">
      <ImageView
        android:id="@+id/successImage"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_success"/>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Successful"
        android:textColor="@color/colorPrimary"/>
    </LinearLayout>

  </android.support.constraint.ConstraintLayout>

